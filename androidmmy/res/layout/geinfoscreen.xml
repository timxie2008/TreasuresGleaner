<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:scrollbars="none"
  > 
  <RelativeLayout 
      android:layout_width="fill_parent"
  	  android:layout_height="wrap_content"
      >
  <LinearLayout
  	android:id="@+id/geInfoScreen"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:orientation="vertical"
  	>  	
  	<LinearLayout
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content"
  		android:layout_margin="5dip"
  		android:orientation="vertical"
  		>
  		<!--标题-->
  		<TextView
  			android:id="@+id/geInfoScreenTitle"
  			android:layout_width="fill_parent"
  			android:layout_height="wrap_content"
  			android:gravity="center_horizontal"
  			android:textSize="17sp"
  			android:textColor="#fff"
  			>
  		</TextView> 		
  	</LinearLayout>	
  	<RelativeLayout
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content"
  		android:layout_marginLeft="5dip"
  		>
  		<!--分割线-->
  		<ImageView
  			android:layout_width="fill_parent"
  			android:layout_height="1dip"
  			android:background="#777"
  			android:contentDescription="@string/geContentDes"
  			>
  		</ImageView>
  		<!--图标-->
  		<ImageView
  			android:id="@+id/geInfoScreenIcon"
  			android:layout_width="60dip"
  			android:layout_height="60dip"
  			android:layout_alignParentLeft="true"
  			android:contentDescription="@string/geContentDes"
  			>
  		</ImageView>
  		<LinearLayout
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:orientation="vertical"
  			android:layout_toRightOf="@id/geInfoScreenIcon"
  			android:layout_marginLeft="5dip"
  			>
  			<!--名称-->
  			<TextView
  				android:id="@+id/geInfoScreenName"
  				android:layout_width="wrap_content"
  				android:layout_height="wrap_content"
  				android:textSize="17dip"
  				android:textColor="#ff9900"
  				>
  			</TextView>
  			<!--版本-->
  			<LinearLayout
  				android:layout_width="wrap_content"
  				android:layout_height="wrap_content"
  				android:orientation="horizontal"
  				>
  				<TextView
  					android:layout_width="wrap_content"
  					android:layout_height="wrap_content"
  					android:text="@string/geInfoVerText"
  					android:textColor="#777"
  					>
  				</TextView>
  				<TextView
  					android:id="@+id/geInfoScreenVersion"
  					android:layout_width="wrap_content"
  					android:layout_height="wrap_content"
  					android:textColor="#777"
  					>
  				</TextView>
  			</LinearLayout>
  			<!--大小-->
  			<LinearLayout
  				android:layout_width="wrap_content"
  				android:layout_height="wrap_content"
  				android:orientation="horizontal"
  				>
  				<TextView
  				android:layout_width="wrap_content"
  				android:layout_height="wrap_content"
  				android:text="@string/geInfoVolText"
  				android:textColor="#777"
  				/> 			
  				<TextView
  				android:id="@+id/geInfoScreenSize"
  				android:layout_width="wrap_content"
  				android:layout_height="wrap_content"
  				android:textColor="#777"
  				/>
  			</LinearLayout> 	 					
  		</LinearLayout>
  		<!--金币数量-->
  		<LinearLayout
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:orientation="vertical"
  			android:gravity="center"
  			android:layout_alignParentRight="true"
  			>
  			<TextView
  			android:id="@+id/geInfoScreenEgg"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff9900"
  			/>
  			<Button
  			android:id="@+id/geInfoScreenButton"
			android:layout_width="wrap_content"
			android:layout_height="36dip"
			android:text="@string/geInfoBtnText"
			style="@style/textStyle"
  			/>
  		</LinearLayout>
  	</RelativeLayout> 	
  	<!--介绍-->
  	<LinearLayout
  		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_margin="5dip"
  		>
  		<TextView
  		android:id="@+id/geInfoScreenDescription"
  		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:textColor="#777"
  		/>
  		<!--图片-->
  		<LinearLayout
  			android:layout_width="fill_parent"
  			android:layout_height="wrap_content"
  			android:orientation="horizontal"
  			>
  			<ImageView
  			android:id="@+id/geInfoScreenImage1"
	  		android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:contentDescription="@string/geContentDes"
  			/>
  			<!--分割线-->
  			<ImageView
  			android:layout_width="2dip"
			android:layout_height="wrap_content"
			android:contentDescription="@string/geContentDes"
  			/>
  			<ImageView
  			android:id="@+id/geInfoScreenImage2"
	  		android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:contentDescription="@string/geContentDes"
  			/>
  		</LinearLayout>
  	</LinearLayout>
  </LinearLayout>
  <Button 
          android:id="@+id/geInfoExitButton"
          android:layout_width="wrap_content"
		  android:layout_height="36dip"
		  android:layout_marginRight="2dip"
		  android:layout_alignParentTop="true"
		  android:layout_alignParentRight="true"
		  android:text="@string/geInfoBackText"
		  style="@style/textStyle"
          />
  </RelativeLayout>
</ScrollView>
