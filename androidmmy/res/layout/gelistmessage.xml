<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/adsList"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
	<LinearLayout 
		android:id="@+id/gelistmessageLinear"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_marginTop="5dip"
	    android:layout_marginLeft="10dip"
	    android:layout_marginRight="10dip"
		android:background="@drawable/gebarex"
	    android:orientation="horizontal"
	    >
	    <ImageView 
        android:id="@+id/gelistmessageIcon"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:layout_marginLeft="8dip"
        android:layout_gravity="center_vertical"
        android:scaleType="fitCenter"
        android:contentDescription="@string/geContentDes"
        />
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_marginLeft="5dip"
	        android:layout_marginTop="5dip"
	        >
	    	<TextView 
	    	    android:id="@+id/gelistmessageName"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:textSize="17dip"
	    	    android:textColor="#555555"
	    	    android:singleLine="true"
	    	    />
	    	<TextView 
	    	    android:id="@+id/gelistmessageComm"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:paddingTop="6dip"
	    	    android:textColor="#999999"
	    	    android:singleLine="true"
	    	    />
	    </LinearLayout>
	</LinearLayout>
	<Button 
	    android:id="@+id/gelistmessageDownButton"
	    android:layout_marginTop="5dip"
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="15dip"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"	   
	    android:textColor="#ffffffff"
	    android:background="@drawable/gebtnex"
	    style="@style/textStyle"
	    android:gravity="center"
	    />   
</RelativeLayout>